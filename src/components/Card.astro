---
export interface Props {
  title: string
  subtitle: string
  body: string
  href: string
  imgSrc: string
  imgAlt: string
}
const { imgSrc, imgAlt, href, title, subtitle, body } = Astro.props as Props
---

<a href={href} class="group relative block bg-black overflow-hidden rounded-xl">
  <img
    src={imgSrc}
    alt={imgAlt}
    class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50"
  />
  <div class="relative p-6">
    <p class="text-sm font-medium tracking-widest text-pink-500 uppercase">{subtitle}</p>
    <p class="text-xl font-bold text-white sm:text-2xl">{title}</p>
    <div class="mt-32 sm:mt-48 lg:mt-64">
      <div class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100">
        <p class="text-sm text-white">{body}</p>
      </div>
    </div>
  </div>
</a>







