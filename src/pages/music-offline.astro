---
// src/pages/music-offline.astro
// Página ESTÁTICA que será precacheada por el Service Worker
// Carga los datos del API cacheado en el cliente

import Layout from "../layouts/Layout.astro";
import SongTable from "../components/SongTable.jsx";

// NO hacemos fetch del servidor - todo es client-side
---

<Layout title="Lista de Canciones (Offline)">
    <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="text-center mb-12">
                <h1
                    class="text-5xl md:text-6xl font-extrabold tracking-tight mb-4 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent"
                >
                    Lista de Canciones
                </h1>
                <p class="text-gray-500 text-lg max-w-2xl mx-auto mt-4">
                    Modo Offline - Mostrando canciones guardadas localmente
                </p>
            </div>

            <!-- SongTable sin datos del server, cargará del API cacheado -->
            <SongTable songs={[]} client:only="react" />
        </div>
    </div>
</Layout>
